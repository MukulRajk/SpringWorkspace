<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<bean id="lap" class="in.mindcraft.SpringApp.Laptop">
		<property name="lid" value="1001"></property>        <!--Setter injection -->
		<property name="make" value="Lenovo"></property>
		<property name="cost" value="45000" ></property>
	</bean>
	
  <bean id="l1" class="in.mindcraft.SpringApp.Laptop">
	<constructor-arg value="90000" type="double"></constructor-arg>  <!-- if sequences changes mention type-->
	<constructor-arg value="2001" type="int"></constructor-arg>  <!-- Constructor Injection-->
	<constructor-arg value="Asus" type="String"></constructor-arg>
	
  </bean>

</beans>